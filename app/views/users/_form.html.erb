

<div class="text-center">
<div class="container-new-books">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="card-white">

        <h2>User settings</h2>
        <ul>
          <li class="list-inline text-center">

            <%= simple_form_for @registrations do |f| %>
            <% f.error_notification %>
            <%= f.input :email, label: "New user name" %>
            <%= f.input :address %>
            <%= f.button :submit %>
            <% end %>
          </li>
        </ul>
        </div>
      </div>
    </div>
  </div>
</div>
